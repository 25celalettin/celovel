{
    "name": "celovel/framework",
    "description": "Laravel benzeri modern PHP framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Celovel Developer",
            "email": "dev@celovel.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Celovel\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
